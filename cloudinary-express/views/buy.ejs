<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buy Page</title>
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Verdana, sans-serif;
      background-color: #FFA500;
      color: #333;
      text-align: center;
    }

    .header {
        font-size: 36px;
        color: white;
    }

    .back-button {
      font-size: 20px;
      position: absolute;
      top: 10px;
      left: 10px;
      color: #FF6347;
      text-decoration: none;
    }

    h1 {
      color: white;
    }

    .product-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .product {
      max-width: 200px;
      padding: 16px;
      border: 1px solid #ddd;
      border-radius: 8px;
      background-color: #fff;
      margin: 16px;
    }

    .product a {
      text-decoration: none;
      color: #FF8C00;
      font-weight: bold;
    }

    .product a:hover {
      color: white;
      background-color: #FF8C00;
    }

    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .page-link {
      margin: 0 5px;
      padding: 8px 12px;
      border: 1px solid #ddd;
      text-decoration: none;
      cursor: pointer;
    }

    .checkout-button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #FF6347;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .checkout-button:hover {
      background-color: #FF4500;
    }

  </style>
</head>
<body>
  <a class="back-button" href="/">Back</a>
  <h1><div class="header">>Place to spend some money!</div></h1>

  <h1>Available Products</h1>
  <div class="product-container">
    <% if (products && products.length > 0) { %>
      <% products.forEach((product, index) => { %>
        <div class="product">
          <p><strong>Product Name:</strong> <%= product.productName %></p>
          <p><strong>Quantity:</strong> <%= product.quantity %></p>
          <p><strong>Price:</strong> <%= product.price %></p>
          <p><strong>Category:</strong> <%= product.category %></p>
          <a href="/buy/<%= product._id %>/checkout">Add to Checkout</a>
        </div>
      <% }) %>

      <div class="pagination">
        <% for (let i = 1; i <= Math.ceil(products.length / 5); i++) { %>
          <a class="page-link" href="/buy?page=<%= i %>"><%= i %></a>
        <% } %>
      </div>

      <a href="/checkout" class="checkout-button">Checkout</a>

    <% } else { %>
      <p>No products available.</p>
    <% } %>
  </div>
  

</body>
</html>
